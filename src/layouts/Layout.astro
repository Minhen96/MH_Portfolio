---
import "../styles/global.css";

interface Props {
	title: string;
	description?: string;
	image?: string;
	type?: string;
}

const {
	title,
	description = "Yap Min Hen - Software Engineer & Full Stack Developer based in Kuala Lumpur. Specialized in React, Spring Boot, and Mobile Development.",
	image = "/profile.jpg",
	type = "website",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Canonical URL -->
		<link rel="canonical" href={canonicalURL} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={type} />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={new URL(image, Astro.url)} />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content={Astro.url} />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content={new URL(image, Astro.url)} />

		<title>{title}</title>
		<!-- Inline script for dark mode to prevent FOUC -->
		<script is:inline>
			const theme = (() => {
				if (
					typeof localStorage !== "undefined" &&
					localStorage.getItem("theme-mode")
				) {
					return localStorage.getItem("theme-mode");
				}
				if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
					return "dark";
				}
				return "dark"; // Default to dark
			})();

			if (theme === "light") {
				document.documentElement.classList.remove("dark");
			} else {
				document.documentElement.classList.add("dark");
			}
			window.localStorage.setItem("theme-mode", theme);
		</script>
	</head>
	<body
		class="bg-gray-50 dark:bg-neutral-950 transition-colors duration-300 opacity-0 relative"
	>
		<!-- Global Ambient Background -->
		<div
			class="fixed inset-0 z-[-1] overflow-hidden pointer-events-none select-none"
		>
			<div
				class="absolute inset-0 bg-gray-50 dark:bg-neutral-950 transition-colors duration-300"
			>
			</div>
			<div class="absolute inset-0 bg-noise opacity-[0.03]"></div>

			{
				/* Drifting Orbs - Only visible in dark mode primarily, or subtle in light */
			}
			<div
				class="absolute top-0 -left-4 w-96 h-96 bg-portfolio-navy/20 rounded-full mix-blend-multiply filter blur-3xl opacity-0 dark:opacity-20 animate-blob"
			>
			</div>
			<div
				class="absolute top-0 -right-4 w-96 h-96 bg-portfolio-royal-blue/20 rounded-full mix-blend-multiply filter blur-3xl opacity-0 dark:opacity-20 animate-blob animation-delay-2000"
			>
			</div>
			<div
				class="absolute -bottom-32 left-20 w-96 h-96 bg-purple-900/20 rounded-full mix-blend-multiply filter blur-3xl opacity-0 dark:opacity-20 animate-blob animation-delay-4000"
			>
			</div>
		</div>

		<script is:inline>
			(function () {
				// Anti-FOUC & Intro Logic
				const isReload =
					performance.getEntriesByType("navigation")[0]?.type ===
					"reload";
				const introDone =
					sessionStorage.getItem("portfolio_intro_completed") ===
					"true";

				// Should we show the intro?
				// Yes if: Hard refresh OR Not done yet
				const showIntro = isReload || !introDone;

				if (showIntro) {
					document.body.classList.add(
						"overflow-hidden",
						"animations-paused",
					);
					// Body remains opacity-0 until IntroController (or fallback) reveals it
					// But wait, if we hide body, IntroScreen won't show either since it's a child!
					// CORRECT: We need to hide ONLY the main content, not the IntroOverlay.
					// BUT IntroOverlay is a React Portal or just a child?
					// In index.astro, IntroController is a sibling to Navigation/Main.
					// So default opacity-0 on Body is risky if IntroController is inside Body.
					// Solution: Remove opacity-0 from body class in HTML, apply it via script to SPECIFIC elements if needed,
					// OR relies on IntroController to be visible while siblings are hidden.

					// Better approach:
					// Add 'intro-active' class to body.
					// Define CSS that hides 'main', 'nav', 'footer' when 'intro-active' is present.
					// IntroController (z-9999) will override or be outside that selector.
					document.body.classList.add("intro-active");
				} else {
					// No intro needed, show immediately
					document.body.classList.remove("opacity-0");
				}
			})();
		</script>
		<style is:global>
			/* Global Scroll Animation */
			.animate-on-scroll {
				opacity: 0;
				transform: translateY(20px);
				transition: all 0.8s cubic-bezier(0.16, 1, 0.3, 1);
				will-change: opacity, transform;
			}
			.animate-on-scroll.is-visible {
				opacity: 1;
				transform: translateY(0);
			}

			/* When intro is active, hide everything EXCEPT the intro overlay */
			body.intro-active > *:not(#intro-overlay-container) {
				opacity: 0;
				pointer-events: none;
			}
			/* But IntroController renders IntroScreen. logic?
			   IntroController is a Preact component. It renders into a div? 
			   Astro renders it as <astro-island>.
			   We just need to ensure the IntroScreen is visible.
			   IntroScreen uses fixed positioning (z-9999), so opacity:0 on parent (body) would hide it?
			   Yes, opacity on parent hides children.
			   
			   So we CANNOT put opacity:0 on body.
			   
			   Let's use the 'animations-paused' class we already have to strictly pause everything.
			   To prevent FOUC (visual flash), we can set Main content to opacity 0 initially?
			*/

			/* New Strategy: Default Main to Opacity 0. Reveal when ready. */
			body:not(.intro-active) {
				opacity: 1;
			}
		</style>
		<slot />

		<script>
			// Global Scroll Observer (Runs once for the whole app)
			const observer = new IntersectionObserver(
				(entries) => {
					entries.forEach((entry) => {
						if (entry.isIntersecting) {
							entry.target.classList.add("is-visible");
							observer.unobserve(entry.target); // Run once!
						}
					});
				},
				{ threshold: 0.1, rootMargin: "0px 0px -20px 0px" },
			);

			// Utilize Astro's page load if available, or fallback to DOMContentLoaded
			document.addEventListener("DOMContentLoaded", () => {
				document
					.querySelectorAll(".animate-on-scroll")
					.forEach((el) => observer.observe(el));
			});

			// Re-run for View Transitions (if enabled later)
			document.addEventListener("astro:page-load", () => {
				document
					.querySelectorAll(".animate-on-scroll")
					.forEach((el) => observer.observe(el));
			});

			// Reveal body if it was hidden and intro didn't fire (failsafe)
			window.addEventListener("load", () => {
				document.body.classList.remove("opacity-0");
				// Extra check for lazily loaded elements
				document
					.querySelectorAll(".animate-on-scroll")
					.forEach((el) => observer.observe(el));
			});
		</script>
	</body>
</html>
