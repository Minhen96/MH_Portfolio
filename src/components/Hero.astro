---
import { Github, Instagram, Mail, ChevronDown } from "lucide-preact";
import { getEntry } from "astro:content";

const socialsEntry = await getEntry("siteConfig", "socials");
const personalEntry = await getEntry("siteConfig", "personal");

const socialLinks = {
    github: socialsEntry?.data.github || "#",
    instagram: socialsEntry?.data.instagram || "#",
    whatsapp: socialsEntry?.data.whatsapp || "#",
    email: `mailto:${personalEntry?.data.email || "#"}`,
};

// Split name for effect "Min" "Hen"
const fullName = personalEntry?.data.name || "Min Hen";
const nameParts = fullName.split(" ");
const [firstName, lastName] =
    nameParts.length > 1 ? nameParts.slice(-2) : [fullName, ""];
---

<section
    id="hero"
    class="min-h-screen flex items-center justify-center relative overflow-hidden pt-16 transition-colors duration-300 bg-transparent"
>
    <!-- Animated geometric accents -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div
            class="absolute top-20 left-12 w-40 h-40 border-l-2 border-t-2 border-portfolio-navy/30 animate-fade-in-up"
        >
        </div>
        <div
            class="absolute bottom-20 right-12 w-40 h-40 border-r-2 border-b-2 border-portfolio-royal-blue/30 animate-fade-in-up delay-200"
        >
        </div>
        <!-- Floating gradient orb -->
        <div
            class="absolute top-1/4 right-1/4 w-64 h-64 rounded-full bg-gradient-to-r from-portfolio-navy/10 to-portfolio-royal-blue/10 blur-3xl animate-pulse-slow"
        >
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 py-20 relative z-10">
        <div class="grid md:grid-cols-2 gap-8 md:gap-12 items-center">
            <!-- Left Column - Content -->
            <div
                class="space-y-6 md:space-y-8 text-center md:text-left order-2 md:order-1"
            >
                <!-- Name with Shimmer & Glow -->
                <div class="inline-block relative animate-fade-in-up">
                    <div
                        class="absolute -inset-8 bg-[radial-gradient(circle_at_center,rgba(59,130,246,0.25)_0%,transparent_70%)] blur-2xl rounded-full opacity-0 animate-pulse-glow delay-200"
                    >
                    </div>
                    <h1
                        class="relative text-6xl md:text-8xl font-bold leading-none tracking-tight mb-4 animate-float"
                    >
                        <span
                            class="inline-block animate-slide-in-left text-gray-900 dark:text-white"
                            >{firstName}</span
                        >
                        {
                            lastName && (
                                <span class="inline-block animate-slide-in-right text-gray-900 dark:text-white ml-0">
                                    {lastName}
                                </span>
                            )
                        }
                    </h1>
                </div>

                <p
                    class="text-2xl md:text-3xl font-light tracking-wide text-gray-600 dark:text-gray-400 animate-fade-in delay-500"
                >
                    Software Engineer & Full Stack Developer
                </p>

                <!-- Accent divider -->
                <div
                    class="flex items-center justify-center md:justify-start gap-4 py-4 animate-scale-in delay-700"
                >
                    <div
                        class="h-[2px] w-20 md:w-28 bg-gradient-to-r from-transparent via-portfolio-navy/50 to-transparent"
                    >
                    </div>
                    <div
                        class="w-2 h-2 rounded-full bg-portfolio-royal-blue shadow-lg shadow-portfolio-royal-blue/50 animate-pulse"
                    >
                    </div>
                    <div
                        class="h-[2px] w-20 md:w-28 bg-gradient-to-r from-transparent via-portfolio-royal-blue/50 to-transparent"
                    >
                    </div>
                </div>

                <p
                    class="text-base md:text-lg max-w-2xl mx-auto font-light text-gray-600 dark:text-gray-500 animate-fade-in delay-1000"
                >
                    I'm a Software Engineering graduate from TAR UMT with a
                    passion for building full-stack applications across web and
                    mobile platforms.
                </p>

                <!-- Social Links -->
                <div
                    class="flex justify-center md:justify-start gap-4 pt-6 animate-fade-in delay-1000"
                >
                    <a
                        href={socialLinks.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-btn group"
                    >
                        <Github
                            class="text-black/70 group-hover:text-black dark:text-white/70 dark:group-hover:text-white transition-colors"
                            size={22}
                        />
                    </a>
                    <a
                        href={socialLinks.whatsapp}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-btn group relative"
                        aria-label="Chat on WhatsApp"
                    >
                        <!-- High-Quality WhatsApp Icon -->
                        <svg
                            class="text-black/70 group-hover:text-[#25D366] dark:text-white/70 dark:group-hover:text-[#25D366] transition-colors duration-300"
                            width="22"
                            height="22"
                            viewBox="0 0 24 24"
                            fill="currentColor"
                        >
                            <path
                                d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                            ></path>
                        </svg>
                    </a>
                    <a
                        href={socialLinks.email}
                        class="social-btn group"
                        aria-label="Send Email"
                    >
                        <Mail
                            class="text-black/70 group-hover:text-black dark:text-white/70 dark:group-hover:text-white transition-colors"
                            size={22}
                        />
                    </a>
                    <a
                        href={socialLinks.instagram}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="social-btn group"
                    >
                        <Instagram
                            class="text-black/70 group-hover:text-black dark:text-white/70 dark:group-hover:text-white transition-colors"
                            size={22}
                        />
                    </a>
                </div>

                <button
                    id="scroll-contact"
                    class="mt-8 px-8 py-3 rounded-full font-medium relative overflow-hidden group text-white animate-fade-in-up delay-1000"
                >
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-portfolio-navy to-portfolio-royal-blue"
                    >
                    </div>
                    <div
                        class="absolute inset-0 bg-gradient-to-r from-portfolio-royal-blue to-portfolio-navy opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                    >
                    </div>
                    <span class="relative z-10">Get In Touch</span>
                </button>
            </div>

            <!-- Right Column - Profile Image -->
            <div
                class="flex justify-center md:justify-end order-1 md:order-2 animate-fade-in-right delay-500"
            >
                <div class="relative">
                    <div
                        class="absolute inset-0 rounded-2xl bg-gradient-to-br from-portfolio-navy to-portfolio-royal-blue blur-2xl opacity-30 animate-pulse-slow"
                    >
                    </div>
                    <div class="relative">
                        <img
                            src="/profile.jpg"
                            alt="Min Hen Yap"
                            class="relative w-48 h-48 md:w-80 md:h-80 lg:w-96 lg:h-96 rounded-2xl object-cover border-2 border-white/10 shadow-2xl"
                        />
                        <div
                            class="absolute inset-0 rounded-2xl bg-gradient-to-t from-black/20 to-transparent"
                        >
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <button
            id="scroll-about"
            class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
        >
            <ChevronDown size={32} class="text-gray-400 dark:text-gray-700" />
        </button>
    </div>
</section>

<style>
    .social-btn {
        @apply p-4 rounded-lg transition-all hover:scale-105 bg-black/5 hover:bg-black/10 border border-black/10 dark:bg-white/5 dark:hover:bg-white/10 dark:border-white/10;
    }

    /* Custom Animations using pure CSS keyframes matching Framer Motion feel */
    @keyframes fade-in {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
    @keyframes fade-in-up {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    @keyframes slide-in-left {
        from {
            opacity: 0;
            transform: translateX(-50px) rotate(-10deg);
        }
        to {
            opacity: 1;
            transform: translateX(0) rotate(0);
        }
    }
    @keyframes slide-in-right {
        from {
            opacity: 0;
            transform: translateX(50px) rotate(10deg);
        }
        to {
            opacity: 1;
            transform: translateX(0) rotate(0);
        }
    }
    @keyframes scale-in {
        from {
            opacity: 0;
            transform: scale(0.5);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.5;
            transform: scale(1);
        }
        50% {
            opacity: 0.8;
            transform: scale(1.05);
        }
    }

    .animate-fade-in {
        animation: fade-in 1s ease-out forwards;
    }
    .animate-fade-in-up {
        animation: fade-in-up 0.8s ease-out forwards;
    }
    .animate-slide-in-left {
        animation: slide-in-left 0.8s ease-out forwards;
    }
    .animate-slide-in-right {
        animation: slide-in-right 0.8s ease-out forwards;
    }
    .animate-scale-in {
        animation: scale-in 0.8s ease-out forwards;
    }
    .animate-pulse-slow {
        animation: pulse-slow 4s infinite ease-in-out;
    }

    .delay-200 {
        animation-delay: 200ms;
    }
    .delay-500 {
        animation-delay: 500ms;
    }
    .delay-700 {
        animation-delay: 700ms;
    }
    .delay-1000 {
        animation-delay: 1000ms;
    }
</style>

<script>
    document.getElementById("scroll-contact")?.addEventListener("click", () => {
        document
            .getElementById("contact")
            ?.scrollIntoView({ behavior: "smooth" });
    });
    document.getElementById("scroll-about")?.addEventListener("click", () => {
        document
            .getElementById("about")
            ?.scrollIntoView({ behavior: "smooth" });
    });
</script>
