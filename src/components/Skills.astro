          <div class="absolute inset-0 bg-gradient-to-br from-portfolio-navy/5 via-transparent to-portfolio-royal-blue/5 opacity-0 group-hover/card:opacity-100 transition-opacity duration-500"></div>

          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-6 tracking-tight flex items-center gap-3 relative z-10">
            <span class={`w-1.5 h-8 rounded-full ${index % 2 === 0 ? 'bg-gradient-to-b from-portfolio-navy to-portfolio-royal-blue' : 'bg-gradient-to-b from-portfolio-royal-blue to-portfolio-navy'} shadow-lg`}></span>
            {category.title}
          </h3>
          <div class="flex flex-wrap gap-3 relative z-10">
            {category.skills.map((skill) => (
              <span
                class="px-4 py-2 rounded-full text-sm font-medium border-2 transition-all hover:scale-105 bg-black/5 text-gray-700 border-black/20 hover:bg-black/10 hover:border-portfolio-navy/50 dark:bg-white/5 dark:text-gray-300 dark:border-white/20 dark:hover:bg-white/10 dark:hover:border-portfolio-navy/50 shadow-sm hover:shadow-md"
              >
                {skill}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 0.8s ease-out forwards;
  }
  
  .animate-scale-in {
    opacity: 0;
    transform: scale(0.9);
    animation: scaleIn 0.6s ease-out forwards;
  }
  
  @keyframes fadeIn {
    to { opacity: 1; }
  }
  
  @keyframes scaleIn {
    to { opacity: 1; transform: scale(1); }
  }
</style>

<script>
    // If strict animation triggers on scroll are needed, reuse the observer logic.
    // For now simple animations on load or simple CSS hover states.
    // The CSS animations above trigger on load. To trigger on scroll, we can add the observer again.
    
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                (entry.target as HTMLElement).style.animationPlayState = 'running';
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.1 });
    
    // We can pause animation initially in CSS and run it here, or just let them run.
    // The class based visibility toggle in About.astro is cleaner.
    // Let's assume the user is okay with load animations or we can add scroll later.
    // For consistency with About/Timeline, let's just leave it simple for now.
</script>
