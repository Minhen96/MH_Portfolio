<section id="skills" class="py-32 relative bg-gray-50 dark:bg-neutral-950 transition-colors duration-300">
  <!-- Luxurious Top Border -->
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-portfolio-royal-blue to-transparent"></div>
