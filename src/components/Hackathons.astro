---
import { getCollection } from 'astro:content';
import { Rocket, MapPin, Calendar, ExternalLink } from 'lucide-preact';

const allHackathons = await getCollection('hackathons');
const hackathons = allHackathons.map(item => item.data).sort((a, b) => a.order - b.order);
---

<section id="hackathons" class="py-32 relative bg-transparent transition-colors duration-300">
  <!-- Background Elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-20 right-10 w-96 h-96 bg-portfolio-royal-blue/5 rounded-full blur-3xl animate-pulse-slow"></div>
    <div class="absolute bottom-20 left-10 w-80 h-80 bg-portfolio-navy/5 rounded-full blur-3xl animate-pulse-slower"></div>
  </div>

  <div class="max-w-6xl mx-auto px-6 relative z-10">
    <!-- Header -->
    <div class="text-center mb-16 animate-on-scroll">
      <div class="flex items-center justify-center mb-6">
        <div class="h-px w-16 bg-gradient-to-r from-transparent to-portfolio-navy/50"></div>
        <div class="mx-4 px-6 py-1 rounded-full border border-portfolio-navy/20 bg-gradient-to-r from-portfolio-navy/5 to-portfolio-royal-blue/5">
          <span class="text-xs font-medium tracking-widest uppercase text-portfolio-navy">Hackathons</span>
        </div>
        <div class="h-px w-16 bg-gradient-to-l from-transparent to-portfolio-royal-blue/50"></div>
      </div>

      <h2 class="text-4xl md:text-6xl font-bold text-black dark:text-white mb-6 tracking-tight">
        Hackathon Experience
      </h2>
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Building innovative solutions under pressure and collaborating with talented teams.
      </p>
    </div>

    <!-- Hackathons Grid -->
    <div class="grid md:grid-cols-2 gap-8">
      {hackathons.map((hackathon, index) => (
        <div 
          class="hackathon-card group p-8 rounded-2xl bg-white dark:bg-white/5 border-2 border-black/10 dark:border-white/10 shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 animate-on-scroll"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Image -->
          {hackathon.image && (
            <div class="h-56 mb-8 overflow-hidden rounded-xl border-2 border-black/5 dark:border-white/5 relative">
              <img 
                src={hackathon.image} 
                alt={hackathon.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent group-hover:opacity-0 transition-opacity"></div>
            </div>
          )}

          <!-- Header -->
          <div class="flex items-start justify-between mb-4">
            <div class="flex-grow">
              <div class="flex items-center justify-between">
                <h3 class="text-2xl font-bold text-black dark:text-white mb-2 group-hover:text-portfolio-royal-blue transition-colors">
                  {hackathon.title}
                </h3>
                {hackathon.link && (
                  <a 
                    href={hackathon.link} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="p-2 rounded-full bg-portfolio-royal-blue/10 text-portfolio-royal-blue hover:bg-portfolio-royal-blue hover:text-white transition-all transform hover:scale-110"
                    title="View Hackathon Details"
                  >
                    <ExternalLink size={18} />
                  </a>
                )}
              </div>
              <div class="flex items-center gap-2 text-portfolio-royal-blue font-semibold mb-3">
                <Rocket size={20} />
                <span>{hackathon.subtitle}</span>
              </div>
            </div>
          </div>

          <!-- Meta Info -->
          <div class="flex flex-wrap gap-4 mb-4 text-sm text-gray-600 dark:text-gray-400">
            <div class="flex items-center gap-2">
              <Calendar size={16} />
              <span>{hackathon.date}</span>
            </div>
            <div class="flex items-center gap-2">
              <MapPin size={16} />
              <span>{hackathon.location}</span>
            </div>
          </div>

          <!-- Description -->
          <div class="mb-6 space-y-2">
            {hackathon.description.map((desc) => (
              <p class="text-sm text-gray-700 dark:text-gray-300 leading-relaxed">
                {desc}
              </p>
            ))}
          </div>

          <!-- Tech Stack -->
          <div class="flex flex-wrap gap-2">
            {hackathon.techStack.map((tech) => (
              <span class="px-3 py-1 text-xs font-medium rounded-full bg-portfolio-navy/10 dark:bg-portfolio-navy/20 text-portfolio-navy dark:text-portfolio-royal-blue border border-portfolio-navy/20">
                {tech}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes pulse-slow {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 0.5; }
  }
  @keyframes pulse-slower {
    0%, 100% { opacity: 0.2; }
    50% { opacity: 0.4; }
  }
  .animate-pulse-slow {
    animation: pulse-slow 8s ease-in-out infinite;
  }
  .animate-pulse-slower {
    animation: pulse-slower 10s ease-in-out infinite;
  }


</style>


