---
import { Mail, MessageSquare, Send } from "lucide-preact";
import { getEntry } from "astro:content";

const personalEntry = await getEntry("siteConfig", "personal");
const socialsEntry = await getEntry("siteConfig", "socials");
const email =
    (personalEntry?.data.id === "personal"
        ? personalEntry.data.email
        : undefined) || "email@example.com";
const whatsapp =
    (socialsEntry?.data.id === "socials"
        ? socialsEntry.data.whatsapp
        : undefined) || "#";
const mailtoLink = `mailto:${email}`;
---

<section
    id="contact"
    class="py-20 md:py-24 relative bg-transparent transition-colors duration-300 overflow-hidden"
>
    <!-- Dynamic Decorative background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div
            class="absolute top-1/4 -left-20 w-80 h-80 bg-portfolio-navy/10 rounded-full blur-[100px] animate-pulse"
        >
        </div>
        <div
            class="absolute bottom-1/4 -right-20 w-80 h-80 bg-portfolio-royal-blue/10 rounded-full blur-[100px] animate-pulse delay-700"
        >
        </div>
    </div>

    <div
        class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-portfolio-navy to-transparent"
    >
    </div>
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-32 h-1 bg-gradient-to-r from-portfolio-navy via-portfolio-royal-blue to-portfolio-navy blur-sm"
    >
    </div>

    <div class="max-w-4xl mx-auto px-6 relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-12">
            <h2
                class="text-4xl md:text-5xl font-bold text-black dark:text-white mb-4 tracking-tight"
            >
                Let's <span
                    class="bg-gradient-to-r from-portfolio-navy to-portfolio-royal-blue bg-clip-text text-transparent"
                    >Connect</span
                >
            </h2>
            <p
                class="text-base text-gray-600 dark:text-gray-400 max-w-xl mx-auto font-light"
            >
                Have a project vision? Want to discuss technology? Or just want
                to say hi? My inbox is always open.
            </p>
        </div>

        <div class="grid lg:grid-cols-5 gap-6 items-stretch">
            <!-- Left Info Cards -->
            <div class="lg:col-span-2 space-y-4">
                <!-- WhatsApp Card -->
                <a
                    href={whatsapp}
                    target="_blank"
                    class="group block p-6 rounded-2xl bg-white dark:bg-emerald-950/10 border border-emerald-100 dark:border-emerald-500/10 hover:border-emerald-500/50 transition-all shadow-lg shadow-emerald-500/5 hover:shadow-xl hover:shadow-emerald-500/10 relative overflow-hidden"
                >
                    <div
                        class="absolute -right-4 -top-4 w-24 h-24 bg-emerald-500/10 rounded-full blur-xl group-hover:scale-150 transition-transform duration-700"
                    >
                    </div>
                    <div class="flex items-center gap-4 relative z-10">
                        <div
                            class="p-4 rounded-xl bg-emerald-500 text-white shadow-lg shadow-emerald-500/40 group-hover:scale-110 group-hover:rotate-12 transition-transform"
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                                ><path
                                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                                ></path></svg
                            >
                        </div>
                        <div>
                            <span
                                class="block text-xs font-bold uppercase tracking-widest text-emerald-600 dark:text-emerald-400 mb-0.5"
                                >Instant Chat</span
                            >
                            <h3
                                class="text-lg font-bold text-black dark:text-white"
                            >
                                WhatsApp Me
                            </h3>
                        </div>
                    </div>
                </a>

                <!-- Email Card -->
                <a
                    href={mailtoLink}
                    class="p-6 rounded-2xl bg-white dark:bg-white/5 border border-gray-200 dark:border-white/5 hover:border-portfolio-navy/30 transition-all shadow-lg shadow-gray-200/50 dark:shadow-none group overflow-hidden relative block"
                >
                    <div class="flex items-center gap-4 relative z-10">
                        <div
                            class="p-4 rounded-xl bg-portfolio-navy text-white transition-transform group-hover:scale-110"
                        >
                            <Mail size={24} />
                        </div>
                        <div>
                            <span
                                class="block text-xs font-bold uppercase tracking-widest text-portfolio-navy mb-0.5"
                                >Email Me</span
                            >
                            <h3
                                class="text-lg font-bold text-black dark:text-white break-all"
                            >
                                {email}
                            </h3>
                        </div>
                    </div>
                </a>

                <!-- Bio Info -->
                <div class="p-6 space-y-3">
                    <div class="flex items-center gap-3 text-gray-500">
                        <div
                            class="w-2 h-2 rounded-full bg-portfolio-royal-blue animate-ping"
                        >
                        </div>
                        <span class="text-xs font-medium tracking-wide"
                            >Available for new opportunities</span
                        >
                    </div>
                    <p
                        class="text-gray-500 dark:text-gray-400 text-xs leading-relaxed"
                    >
                        Based in Malaysia. Open to full-stack roles, freelance
                        projects, and collaborations.
                    </p>
                </div>
            </div>

            <!-- Right Form -->
            <div class="lg:col-span-3">
                <div
                    class="relative p-[1px] rounded-[24px] bg-gradient-to-br from-black/5 to-black/20 dark:from-white/10 dark:to-white/5 shadow-xl"
                >
                    <form
                        action="https://api.web3forms.com/submit"
                        method="POST"
                        id="contact-form"
                        class="bg-white dark:bg-neutral-900 rounded-[23px] p-8 space-y-5"
                    >
                        <!-- Web3Forms Access Key - GET YOUR KEY HERE: https://web3forms.com/ -->
                        <input
                            type="hidden"
                            name="access_key"
                            value={import.meta.env.FORM_ACCESS_KEY}
                        />
                        <input
                            type="hidden"
                            name="subject"
                            value="New Submission from Portfolio"
                        />
                        <input
                            type="hidden"
                            name="from_name"
                            value="Portfolio Contact"
                        />
                        <!-- Honeypot Spam Protection -->
                        <input
                            type="checkbox"
                            name="botcheck"
                            class="hidden"
                            style="display: none;"
                        />

                        <div class="grid md:grid-cols-2 gap-5">
                            <div class="space-y-1.5">
                                <label
                                    for="name"
                                    class="text-[10px] font-bold uppercase tracking-widest text-gray-400"
                                    >Your Identity</label
                                >
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    placeholder="Yap Min Hen"
                                    class="w-full px-5 py-3 rounded-xl bg-gray-50 dark:bg-white/5 border border-transparent focus:border-portfolio-navy/50 focus:bg-white dark:focus:bg-neutral-800 outline-none transition-all placeholder:text-gray-300 dark:placeholder:text-gray-600 text-black dark:text-white text-sm"
                                />
                            </div>
                            <div class="space-y-1.5">
                                <label
                                    for="email"
                                    class="text-[10px] font-bold uppercase tracking-widest text-gray-400"
                                    >Email Address</label
                                >
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    placeholder="minhen@example.com"
                                    class="w-full px-5 py-3 rounded-xl bg-gray-50 dark:bg-white/5 border border-transparent focus:border-portfolio-navy/50 focus:bg-white dark:focus:bg-neutral-800 outline-none transition-all placeholder:text-gray-300 dark:placeholder:text-gray-600 text-black dark:text-white text-sm"
                                />
                            </div>
                        </div>

                        <div class="space-y-1.5">
                            <label
                                for="message"
                                class="text-[10px] font-bold uppercase tracking-widest text-gray-400"
                                >The Message</label
                            >
                            <textarea
                                id="message"
                                name="message"
                                required
                                rows="4"
                                placeholder="Tell me everything..."
                                class="w-full px-5 py-3 rounded-xl bg-gray-50 dark:bg-white/5 border border-transparent focus:border-portfolio-navy/50 focus:bg-white dark:focus:bg-neutral-800 outline-none transition-all resize-none placeholder:text-gray-300 dark:placeholder:text-gray-600 text-black dark:text-white text-sm"
                            ></textarea>
                        </div>

                        <button
                            type="submit"
                            id="submit-btn"
                            class="group relative w-full py-4 rounded-xl bg-black dark:bg-white text-white dark:text-black font-bold text-base overflow-hidden transition-all hover:scale-[1.01] active:scale-95 shadow-lg shadow-black/10 dark:shadow-white/5 disabled:opacity-70 disabled:cursor-not-allowed"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-r from-portfolio-navy to-portfolio-royal-blue opacity-0 group-hover:opacity-100 transition-opacity"
                            >
                            </div>
                            <span
                                id="btn-content"
                                class="relative z-10 flex items-center justify-center gap-2"
                            >
                                Send Message
                                <Send
                                    size={16}
                                    class="group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"
                                />
                            </span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>
        @keyframes pulse-slow {
            0%,
            100% {
                opacity: 0.1;
                transform: scale(1);
            }
            50% {
                opacity: 0.2;
                transform: scale(1.1);
            }
        }
    </style>

    <script>
        const form = document.getElementById("contact-form") as HTMLFormElement;
        const btn = document.getElementById("submit-btn") as HTMLButtonElement;
        const btnContent = document.getElementById("btn-content");

        if (form && btn && btnContent) {
            const originalContent = btnContent.innerHTML;
            const originalClasses = btn.className;

            form.addEventListener("submit", async (e) => {
                e.preventDefault();
                const formData = new FormData(form);

                // Show loading state
                btnContent.textContent = "Sending...";
                btn.disabled = true;
                btn.style.opacity = "0.7";

                try {
                    const response = await fetch(
                        "https://api.web3forms.com/submit",
                        {
                            method: "POST",
                            body: formData,
                        },
                    );

                    const data = await response.json();

                    if (data.success) {
                        // Success State: Green Button
                        btn.className =
                            "w-full py-4 rounded-xl bg-green-600 text-white font-bold text-base transition-all shadow-lg shadow-green-500/20 scale-[1.02]";

                        let countdown = 3;
                        const updateText = () => {
                            btnContent.textContent = `Message Sent (${countdown})`;
                        };

                        updateText();
                        form.reset();

                        const interval = setInterval(() => {
                            countdown--;
                            if (countdown > 0) {
                                updateText();
                            } else {
                                clearInterval(interval);
                                // Reset to original state
                                btn.className = originalClasses;
                                btnContent.innerHTML = originalContent;
                                btn.disabled = false;
                                btn.style.opacity = "1";
                            }
                        }, 1000);
                    } else {
                        throw new Error(data.message || "Something went wrong");
                    }
                } catch (error) {
                    // Error State: Red Button
                    btn.className =
                        "w-full py-4 rounded-xl bg-red-600 text-white font-bold text-base transition-all shadow-lg shadow-red-500/20";
                    btnContent.textContent = "Failed. Try again.";
                    console.error("Form error:", error);

                    setTimeout(() => {
                        btn.className = originalClasses;
                        btnContent.innerHTML = originalContent;
                        btn.disabled = false;
                        btn.style.opacity = "1";
                    }, 3000);
                }
            });
        }
    </script>
</section>
