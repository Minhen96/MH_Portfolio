---
import { Mail, MessageSquare, Send } from "lucide-preact";
import { getEntry } from "astro:content";

const personalEntry = await getEntry("siteConfig", "personal");
const socialsEntry = await getEntry("siteConfig", "socials");
const email = personalEntry?.data.email || "email@example.com";
const whatsapp = socialsEntry?.data.whatsapp || "#";
const mailtoLink = socialsEntry?.data.email || `mailto:${email}`;
---

<section
    id="contact"
    class="py-32 relative bg-transparent transition-colors duration-300 overflow-hidden"
>
    <!-- Dynamic Decorative background -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div
            class="absolute top-1/4 -left-20 w-96 h-96 bg-portfolio-navy/10 rounded-full blur-[120px] animate-pulse"
        >
        </div>
        <div
            class="absolute bottom-1/4 -right-20 w-96 h-96 bg-portfolio-royal-blue/10 rounded-full blur-[120px] animate-pulse delay-700"
        >
        </div>
    </div>

    <div
        class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-portfolio-navy to-transparent"
    >
    </div>
    <div
        class="absolute top-0 left-1/2 -translate-x-1/2 w-32 h-1 bg-gradient-to-r from-portfolio-navy via-portfolio-royal-blue to-portfolio-navy blur-sm"
    >
    </div>

    <div class="max-w-6xl mx-auto px-6 relative z-10">
        <!-- Section Header -->
        <div class="text-center mb-16">
            <h2
                class="text-5xl md:text-7xl font-bold text-black dark:text-white mb-6 tracking-tight"
            >
                Let's <span
                    class="bg-gradient-to-r from-portfolio-navy to-portfolio-royal-blue bg-clip-text text-transparent"
                    >Connect</span
                >
            </h2>
            <p
                class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto font-light"
            >
                Have a project vision? Want to discuss technology? Or just want
                to say hi? My inbox is always open for new opportunities.
            </p>
        </div>

        <div class="grid lg:grid-cols-5 gap-12 items-stretch">
            <!-- Left Info Cards -->
            <div class="lg:col-span-2 space-y-6">
                <!-- WhatsApp Card -->
                <a
                    href={whatsapp}
                    target="_blank"
                    class="group block p-8 rounded-3xl bg-emerald-50/50 dark:bg-emerald-950/10 border-2 border-emerald-500/10 hover:border-emerald-500/50 transition-all hover:shadow-2xl hover:shadow-emerald-500/10 relative overflow-hidden"
                >
                    <div
                        class="absolute -right-4 -top-4 w-32 h-32 bg-emerald-500/10 rounded-full blur-2xl group-hover:scale-150 transition-transform duration-700"
                    >
                    </div>
                    <div class="flex items-center gap-6 relative z-10">
                        <div
                            class="p-5 rounded-2xl bg-emerald-500 text-white shadow-lg shadow-emerald-500/40 group-hover:scale-110 group-hover:rotate-12 transition-transform"
                        >
                            <svg
                                width="32"
                                height="32"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                                ><path
                                    d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
                                ></path></svg
                            >
                        </div>
                        <div>
                            <span
                                class="block text-sm font-bold uppercase tracking-widest text-emerald-600 dark:text-emerald-400 mb-1"
                                >Instant Chat</span
                            >
                            <h3
                                class="text-2xl font-bold text-black dark:text-white"
                            >
                                WhatsApp Me
                            </h3>
                        </div>
                    </div>
                </a>

                <!-- Email Card -->
                <a
                    href={mailtoLink}
                    class="p-8 rounded-3xl bg-neutral-50 dark:bg-white/5 border-2 border-black/5 dark:border-white/5 hover:border-portfolio-navy/30 transition-all group overflow-hidden relative block"
                >
                    <div class="flex items-center gap-6 relative z-10">
                        <div
                            class="p-5 rounded-2xl bg-portfolio-navy text-white transition-transform group-hover:scale-110"
                        >
                            <Mail size={32} />
                        </div>
                        <div>
                            <span
                                class="block text-sm font-bold uppercase tracking-widest text-portfolio-navy mb-1"
                                >Email Me</span
                            >
                            <h3
                                class="text-xl font-bold text-black dark:text-white break-all"
                            >
                                {email}
                            </h3>
                        </div>
                    </div>
                </a>

                <!-- Bio Info -->
                <div class="p-8 space-y-4">
                    <div class="flex items-center gap-4 text-gray-500">
                        <div
                            class="w-2 h-2 rounded-full bg-portfolio-royal-blue animate-ping"
                        >
                        </div>
                        <span class="text-sm font-medium tracking-wide"
                            >Available for new opportunities</span
                        >
                    </div>
                    <p
                        class="text-gray-500 dark:text-gray-400 text-sm leading-relaxed"
                    >
                        Based in Malaysia. I'm always open to discussing
                        full-stack development roles, freelance projects, or
                        interesting collaborations.
                    </p>
                </div>
            </div>

            <!-- Right Form -->
            <div class="lg:col-span-3">
                <div
                    class="relative p-[2px] rounded-[32px] bg-gradient-to-br from-black/5 to-black/20 dark:from-white/10 dark:to-white/5 shadow-2xl"
                >
                    <form
                        id="contact-form"
                        class="bg-white dark:bg-neutral-900 rounded-[30px] p-10 space-y-6"
                    >
                        <div class="grid md:grid-cols-2 gap-6">
                            <div class="space-y-2">
                                <label
                                    for="name"
                                    class="text-xs font-bold uppercase tracking-widest text-gray-400"
                                    >Your Identity</label
                                >
                                <input
                                    type="text"
                                    id="name"
                                    name="name"
                                    required
                                    placeholder="Yap Min Hen"
                                    class="w-full px-6 py-4 rounded-2xl bg-gray-50 dark:bg-white/5 border-2 border-transparent focus:border-portfolio-navy/50 focus:bg-white dark:focus:bg-neutral-800 outline-none transition-all placeholder:text-gray-300 dark:placeholder:text-gray-600 text-black dark:text-white"
                                />
                            </div>
                            <div class="space-y-2">
                                <label
                                    for="email"
                                    class="text-xs font-bold uppercase tracking-widest text-gray-400"
                                    >Email Address</label
                                >
                                <input
                                    type="email"
                                    id="email"
                                    name="email"
                                    required
                                    placeholder="minhen@example.com"
                                    class="w-full px-6 py-4 rounded-2xl bg-gray-50 dark:bg-white/5 border-2 border-transparent focus:border-portfolio-navy/50 focus:bg-white dark:focus:bg-neutral-800 outline-none transition-all placeholder:text-gray-300 dark:placeholder:text-gray-600 text-black dark:text-white"
                                />
                            </div>
                        </div>

                        <div class="space-y-2">
                            <label
                                for="message"
                                class="text-xs font-bold uppercase tracking-widest text-gray-400"
                                >The Message</label
                            >
                            <textarea
                                id="message"
                                name="message"
                                required
                                rows="4"
                                placeholder="Tell me everything..."
                                class="w-full px-6 py-4 rounded-2xl bg-gray-50 dark:bg-white/5 border-2 border-transparent focus:border-portfolio-navy/50 focus:bg-white dark:focus:bg-neutral-800 outline-none transition-all resize-none placeholder:text-gray-300 dark:placeholder:text-gray-600 text-black dark:text-white"
                            ></textarea>
                        </div>

                        <button
                            type="submit"
                            class="group relative w-full py-5 rounded-2xl bg-black dark:bg-white text-white dark:text-black font-bold text-lg overflow-hidden transition-all hover:scale-[1.01] active:scale-95 shadow-xl shadow-black/10 dark:shadow-white/5"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-r from-portfolio-navy to-portfolio-royal-blue opacity-0 group-hover:opacity-100 transition-opacity"
                            >
                            </div>
                            <span
                                class="relative z-10 flex items-center justify-center gap-3"
                            >
                                Start the Conversation
                                <Send
                                    size={20}
                                    class="group-hover:translate-x-1 group-hover:-translate-y-1 transition-transform"
                                />
                            </span>
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Footer Footer -->
        <footer class="mt-32 pt-12 border-t border-black/5 dark:border-white/5">
            <div
                class="flex flex-col md:flex-row justify-between items-center gap-8"
            >
                <div
                    class="text-2xl font-black italic tracking-tighter text-black dark:text-white"
                >
                    MH<span class="text-portfolio-royal-blue">.</span>
                </div>
                <div class="flex gap-8 text-sm font-medium text-gray-500">
                    <a
                        href="#about"
                        class="hover:text-portfolio-navy transition-colors"
                        >About</a
                    >
                    <a
                        href="#projects"
                        class="hover:text-portfolio-navy transition-colors"
                        >Projects</a
                    >
                    <a
                        href="#skills"
                        class="hover:text-portfolio-navy transition-colors"
                        >Skills</a
                    >
                </div>
                <div class="text-sm text-gray-400">
                    &copy; {new Date().getFullYear()} Yap Min Hen. All rights reserved.
                </div>
            </div>
        </footer>
    </div>
</section>

<style>
    @keyframes pulse-slow {
        0%,
        100% {
            opacity: 0.1;
            transform: scale(1);
        }
        50% {
            opacity: 0.2;
            transform: scale(1.1);
        }
    }
</style>

<script>
    const form = document.getElementById("contact-form") as HTMLFormElement;
    if (form) {
        form.addEventListener("submit", (e) => {
            e.preventDefault();
            const formData = new FormData(form);
            const data = Object.fromEntries(formData);
            console.log("Form submitted:", data);
            alert(
                "Thanks! I've received your message and will get back to you soon. ðŸš€",
            );
            form.reset();
        });
    }
</script>
